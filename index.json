{
  "type": "object",
  "required": [
    "publisher",
    "name",
    "version",
    "content"
  ],
  "properties": {
    "publisher": {
      "type": "string",
      "pattern": "^\\S.*\\S$"
    },
    "name": {
      "type": "string",
      "pattern": "^\\S.*\\S$"
    },
    "version": {
      "type": "string",
      "pattern": "^(0|[1-9][0-9]*)\\.(0|[1-9][0-9]*)\\.(0|[1-9][0-9]*)(-[1-9][0-9]*)?$"
    },
    "content": {
      "type": "array",
      "minItems": 1
    }
  },
  "additionalProperties": false
}
