{
  "type": "object",
  "required": [
    "publisher",
    "name",
    "version",
    "content"
  ],
  "properties": {
    "publisher": {
      "type": "string",
      "minLength": 1
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "permalink": {
      "type": "string",
      "format": "url"
    },
    "version": {
      "type": "string",
      "pattern": "^[0-9]+.[0-9]+.[0-9]+(-[0-9]+)?$"
    },
    "content": {
      "type": "array",
      "minItems": 1
    }
  },
  "additionalProperties": false
}
